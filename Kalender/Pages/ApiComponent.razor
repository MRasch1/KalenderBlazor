@page "/fetch-data"
@inject ApiService ApiService

<h3>Data from API</h3>

<p>@dataFromApi</p>

@code {
    private string dataFromApi;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            dataFromApi = await ApiService.GetDataFromApiAsync();
        }
        catch (Exception ex)
        {
            // Handle errors
        }
    }
}
